{
	"name": "OrderCustomerLoading",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AzureSqlTable1",
						"type": "DatasetReference"
					},
					"name": "OrdersSrc"
				},
				{
					"dataset": {
						"referenceName": "AzureSqlTable1",
						"type": "DatasetReference"
					},
					"name": "CustomerSrc"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "OrderJoinCustomer"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "SelectField"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CustomerID as integer,",
				"          NameStyle as boolean,",
				"          Title as string,",
				"          FirstName as string,",
				"          MiddleName as string,",
				"          LastName as string,",
				"          Suffix as string,",
				"          CompanyName as string,",
				"          SalesPerson as string,",
				"          EmailAddress as string,",
				"          Phone as string,",
				"          PasswordHash as string,",
				"          PasswordSalt as string,",
				"          rowguid as string,",
				"          ModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: true,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> OrdersSrc",
				"source(output(",
				"          CustomerID as integer,",
				"          NameStyle as boolean,",
				"          Title as string,",
				"          FirstName as string,",
				"          MiddleName as string,",
				"          LastName as string,",
				"          Suffix as string,",
				"          CompanyName as string,",
				"          SalesPerson as string,",
				"          EmailAddress as string,",
				"          Phone as string,",
				"          PasswordHash as string,",
				"          PasswordSalt as string,",
				"          rowguid as string,",
				"          ModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> CustomerSrc",
				"OrdersSrc, CustomerSrc join(OrdersSrc@CustomerID == CustomerSrc@CustomerID,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> OrderJoinCustomer",
				"SelectField aggregate() ~> aggregate1",
				"OrderJoinCustomer select(mapColumn(",
				"          CustomerID = OrdersSrc@CustomerID,",
				"          NameStyle = OrdersSrc@NameStyle,",
				"          Title = OrdersSrc@Title,",
				"          FirstName = OrdersSrc@FirstName,",
				"          MiddleName = OrdersSrc@MiddleName,",
				"          LastName = OrdersSrc@LastName,",
				"          Suffix = OrdersSrc@Suffix,",
				"          CompanyName = OrdersSrc@CompanyName,",
				"          SalesPerson = OrdersSrc@SalesPerson,",
				"          EmailAddress = OrdersSrc@EmailAddress,",
				"          Phone = OrdersSrc@Phone,",
				"          PasswordHash = OrdersSrc@PasswordHash,",
				"          PasswordSalt = OrdersSrc@PasswordSalt,",
				"          rowguid = OrdersSrc@rowguid,",
				"          ModifiedDate = OrdersSrc@ModifiedDate,",
				"          CustomerID = CustomerSrc@CustomerID,",
				"          NameStyle = CustomerSrc@NameStyle,",
				"          Title = CustomerSrc@Title,",
				"          FirstName = CustomerSrc@FirstName,",
				"          MiddleName = CustomerSrc@MiddleName,",
				"          LastName = CustomerSrc@LastName,",
				"          Suffix = CustomerSrc@Suffix,",
				"          CompanyName = CustomerSrc@CompanyName,",
				"          SalesPerson = CustomerSrc@SalesPerson,",
				"          EmailAddress = CustomerSrc@EmailAddress,",
				"          Phone = CustomerSrc@Phone,",
				"          PasswordHash = CustomerSrc@PasswordHash,",
				"          PasswordSalt = CustomerSrc@PasswordSalt,",
				"          rowguid = CustomerSrc@rowguid,",
				"          ModifiedDate = CustomerSrc@ModifiedDate",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectField"
			]
		}
	}
}